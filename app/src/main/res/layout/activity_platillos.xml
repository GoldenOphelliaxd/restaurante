<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú del Restaurante"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para agregar nuevo platillo -->
    <Button
        android:id="@+id/btnNuevoPlatillo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NUEVO PLATILLO"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/etBuscarPlatillo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Buscar platillo..."
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="10dp"/>

    <!-- Filtros por estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnVerActivos"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ACTIVOS"
            android:textSize="14sp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnVerInactivos"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="INACTIVOS"
            android:textSize="14sp"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <!-- Lista de platillos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platillos Disponibles:"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/listViewPlatillos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para volver -->
    <Button
        android:id="@+id/btnVolverPlatillos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="VOLVER AL MENÚ"
        android:background="#9E9E9E"
        android:textColor="#FFFFFF"/>

</LinearLayout>