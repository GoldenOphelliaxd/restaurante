<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Proveedores"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para agregar nuevo proveedor -->
    <Button
        android:id="@+id/btnNuevoProveedor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NUEVO PROVEEDOR"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/etBuscarProveedor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Buscar proveedor por nombre o contacto..."
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="15dp"/>

    <!-- Lista de proveedores -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedores Registrados:"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/listViewProveedores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para volver -->
    <Button
        android:id="@+id/btnVolverProveedores"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="VOLVER AL MENÚ"
        android:background="#757575"
        android:textColor="#FFFFFF"/>

</LinearLayout>