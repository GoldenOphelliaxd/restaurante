<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">



    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Ventas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Filtros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btnHoy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="HOY"
            android:textSize="14sp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnAyer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="AYER"
            android:textSize="14sp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnMes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ESTE MES"
            android:textSize="14sp"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <!-- Fechas personalizadas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desde:"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/etFechaDesde"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="AAAA-MM-DD"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasta:"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>


        <EditText
            android:id="@+id/etFechaDesde"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="AAAA-MM-DD"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"/>

        <EditText
            android:id="@+id/etFechaHasta"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="AAAA-MM-DD"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>

    <!-- Botón buscar -->
    <Button
        android:id="@+id/btnBuscarVentas"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="BUSCAR VENTAS"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="15dp"/>
    <!-- Resumen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:elevation="2dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESUMEN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Ventas:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTotalVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monto Total:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvMontoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Lista de ventas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENTAS REGISTRADAS:"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/listViewVentas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"/>

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnVolverVentas"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="VOLVER AL MENÚ"
        android:background="#757575"
        android:textColor="#FFFFFF"/>

</LinearLayout>

