<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvProveedorNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pescados del Mar S.A."
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto: "
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvProveedorContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan PÃ©rez"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel: "
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvProveedorTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5551234567"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  Email: "
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvProveedorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="proveedor@email.com"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvProveedorDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calle Principal #123, Col. Centro"
        android:textSize="12sp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>