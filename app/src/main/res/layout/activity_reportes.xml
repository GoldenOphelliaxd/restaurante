<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š REPORTES DE VENTAS"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp"/>

        <!-- FECHA SELECCIONADA -->
        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: Hoy"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#757575"
            android:layout_marginBottom="16dp"/>

        <!-- BOTONES RÃPIDOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnHoy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hoy"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnAyer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayer"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEsteMes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Este Mes"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <!-- BOTÃ“N PARA SELECCIONAR FECHA -->
        <Button
            android:id="@+id/btnGenerarReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Seleccionar Otra Fecha"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- SEPARADOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- LAYOUT PARA RESUMEN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ RESUMEN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/layoutResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="24dp"/>

        <!-- LAYOUT PARA DETALLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ DETALLE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/layoutDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="VOLVER AL MENÃš"
            android:onClick="volverAlMenu"/>

    </LinearLayout>
</ScrollView>