<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/logo_mezquite"></ImageView>  <!-- Tu logo aquí -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El Mezquite Restaurante"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnNuevaVenta"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NUEVA VENTA"
        android:textSize="18sp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnRegistroVentas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="REGISTRO DE VENTAS"
        android:textSize="18sp"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btnPlatillos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PLATILLOS / MENÚ"
        android:textSize="18sp"
        android:background="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/btnClientes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CLIENTES"
        android:textSize="18sp"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnProveedores"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PROVEEDORES"
        android:textSize="18sp"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btnMateriaPrima"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="MATERIA PRIMA"
        android:textSize="18sp"
        android:background="#795548"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/btnReportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" REPORTES"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>
        android:layout_marginBottom="10dp"/>


</LinearLayout>