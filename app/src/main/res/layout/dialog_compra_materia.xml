<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Stock actual -->
        <TextView
            android:id="@+id/tvStockActualCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock actual: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="16dp"/>

        <!-- Cantidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad a comprar:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etCantidadCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 10.5"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Precio unitario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio unitario:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etPrecioCompraActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 25.50"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Proveedor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedor (opcional):"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etProveedorCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del proveedor"
            android:layout_marginBottom="24dp"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotalCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:textColor="#1976D2"/>

    </LinearLayout>
</ScrollView>