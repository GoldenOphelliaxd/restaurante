<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvMateriaNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mojarra Fresca"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvMateriaEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:textSize="12sp"
            android:padding="3dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proveedor: "
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvMateriaProveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pescados del Mar"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock: "
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvMateriaStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45.5 kg"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  MÃ­nimo: "
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvMateriaMinimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0 kg"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: "
            android:textSize="12sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tvMateriaPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$85.00 / kg"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvMateriaValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  Valor: $3,867.50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>