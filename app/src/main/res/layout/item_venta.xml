<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvVentaId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Venta #001"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvVentaFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-12-04"
            android:textSize="12sp"
            android:textColor="#666666"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvVentaCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cliente: General"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvVentaTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$378.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#4CAF50"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvVentaProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 mojarras, 3 tostadas"
        android:textSize="12sp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>